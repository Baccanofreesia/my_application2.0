<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 分享对话框样式 -->
    <style name="ShareDialogStyle" parent="android:Theme.Dialog">
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <!-- 点击外部可关闭 -->
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <!-- 分享对话框动画 -->
    <style name="ShareDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_out_bottom</item>
    </style>
</resources>