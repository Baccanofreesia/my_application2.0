<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 菜单项样式 -->
    <style name="MenuItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!-- 分割线样式 -->
    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
        <item name="android:layout_marginStart">56dp</item>
    </style>

    <!-- 首页顶部标签 -->
    <style name="HomeTopTab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="HomeTopTabActive" parent="HomeTopTab">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 首页瀑布流占位 -->
    <style name="HomeWaterfallPlaceholder">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:background">@drawable/bg_feed_placeholder</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:padding">14dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>
    <!-- 分享对话框样式 -->
    <style name="ShareDialogStyle" parent="android:Theme.Dialog">
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <!-- 点击外部可关闭 -->
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <!-- 分享对话框动画 -->
    <style name="ShareDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_out_bottom</item>
    </style>
</resources>