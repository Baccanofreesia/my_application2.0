<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="49dp"
    android:background="@color/white"
    android:elevation="10dp">

    <!-- 首页 -->
    <LinearLayout
        android:id="@+id/btn_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="49dp"
        android:minWidth="48dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_friend"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread">

        <TextView
            android:id="@+id/tv_home"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:minWidth="34dp"
            android:gravity="center"
            android:text="首页"
            android:textSize="17sp"
            android:fontFamily="@font/pingfangmedium"
            android:textColor="@color/gray_text" />
    </LinearLayout>

    <!-- 朋友 -->
    <LinearLayout
        android:id="@+id/btn_friend"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="49dp"
        android:minWidth="48dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        app:layout_constraintStart_toEndOf="@id/btn_home"
        app:layout_constraintEnd_toStartOf="@id/btn_add_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:minWidth="34dp"
            android:gravity="center"
            android:text="朋友"
            android:textSize="17sp"
            android:fontFamily="@font/pingfangmedium"
            android:textColor="@color/gray_text" />
    </LinearLayout>

    <!-- 中间加号容器 -->
    <FrameLayout
        android:id="@+id/btn_add_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@id/btn_friend"
        app:layout_constraintEnd_toStartOf="@id/btn_message"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/ic_add_box_custom"
            android:layout_gravity="center" />
    </FrameLayout>

    <!-- 消息 -->
    <LinearLayout
        android:id="@+id/btn_message"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="49dp"
        android:minWidth="48dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        app:layout_constraintStart_toEndOf="@id/btn_add_container"
        app:layout_constraintEnd_toStartOf="@id/btn_me"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:minWidth="34dp"
            android:gravity="center"
            android:text="消息"
            android:textSize="17sp"
            android:fontFamily="@font/pingfangmedium"
            android:textColor="@color/gray_text" />
    </LinearLayout>

    <!-- 我 -->
    <LinearLayout
        android:id="@+id/btn_me"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="49dp"
        android:minWidth="48dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        app:layout_constraintStart_toEndOf="@id/btn_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_me"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:minWidth="34dp"
            android:gravity="center"
            android:text="我"
            android:textSize="17sp"
            android:fontFamily="@font/pingfangmedium"
            android:textColor="@color/gray_text" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>