<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >
    <!-- 顶部导航栏-->
    <LinearLayout
        android:id="@+id/top_tabs"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:weightSum="5"
        android:paddingStart="10dp"
        android:paddingEnd="12dp">
        <TextView
            android:id="@+id/tab_beijing"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="北京"
            android:textColor="#A6161823"
            android:textSize="16sp"
            android:fontFamily="@font/pingfangmedium"/>
        <TextView
            android:id="@+id/tab_tuangou"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="团购"
            android:textColor="#A6161823"
            android:textSize="16sp"
            android:fontFamily="@font/pingfangmedium"/>
        <TextView
            android:id="@+id/tab_guanzhu"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="关注"
            android:textColor="#A6161823"
            android:textSize="16sp"
            android:fontFamily="@font/pingfangmedium"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tab_community_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tab_community"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="社区"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/pingfangmedium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            <View
                android:id="@+id/tab_community_underline"
                android:layout_width="24dp"
                android:layout_height="2dp"
                android:background="@drawable/tab_underline_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="5dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/tab_recommend"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="推荐"
            android:textColor="#A6161823"
            android:textSize="16sp"
            android:fontFamily="@font/pingfangmedium"/>
        <ImageView
            android:id="@+id/icon_search"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:contentDescription="搜索"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_search" />
    </LinearLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_tabs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_stagger"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingTop="8dp"
            android:clipToPadding="false"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <!-- Loading -->
    <ProgressBar
        android:id="@+id/pb_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>