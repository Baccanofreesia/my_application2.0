<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/root_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <!-- 顶部作者区（常驻）-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_author_bar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/author_info_container"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- 返回按钮 -->
                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_s_s_arrowleft"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="返回"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- 作者头像 -->
                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/bg_profile_avatar"
                    android:contentDescription="作者头像"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_default_avatar" />
            </LinearLayout>

            <!-- 作者昵称 -->
            <TextView
                android:id="@+id/tv_author_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:text="作者昵称"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pingfangmedium"
                android:singleLine="true"
                android:ellipsize="end" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_follow"
            android:layout_width="64dp"
            android:layout_height="28dp"
            android:layout_marginEnd="16dp"
            android:text="关注"
            android:textSize="13sp"
            android:textColor="@drawable/follow_button_text_color"
            android:fontFamily="@font/pingfangmedium"
            android:gravity="center"
            android:background="@drawable/bg_button_follow_selector"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 中间可滚动内容区域 -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/top_author_bar"
        app:layout_constraintBottom_toTopOf="@id/bottom_interaction_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--横滑图片容器 -->
            <FrameLayout
                android:id="@+id/image_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F5">

                <!-- ViewPager2 用于横滑图片 -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewpager_images"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:transitionName="shared_image"
                    android:background="@android:color/transparent" />

                <FrameLayout
                    android:id="@+id/volume_container"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="18dp"
                    android:layout_marginBottom="24dp"
                    android:visibility="gone">

                    <View
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_volume_button" />

                    <ImageView
                        android:id="@+id/iv_volume"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_volume_on"
                        android:contentDescription="音量控制"
                        android:clickable="true"
                        android:focusable="true" />
                </FrameLayout>

                <!-- 进度条指示器 -->
                <LinearLayout
                    android:id="@+id/layout_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:layout_gravity="bottom"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="6dp"
                    android:orientation="horizontal"
                    android:visibility="gone" />

                <!-- 图片加载状态提示 -->
                <ProgressBar
                    android:id="@+id/pb_image_loading"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <!-- 图片加载失败提示 -->
                <LinearLayout
                    android:id="@+id/layout_image_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@android:drawable/ic_menu_report_image"
                        android:alpha="0.4"
                        android:contentDescription="加载失败" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="图片加载失败"
                        android:textSize="13sp"
                        android:textColor="@color/gray"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

            </FrameLayout>

            <!-- 内容区域  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="16dp">

                <!-- 标题（可选展示） -->
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="作品标题完整展示不截断"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/pingfangmedium"
                    android:lineSpacingExtra="0dp"
                    android:visibility="gone" />

                <!-- 正文区域 -->
                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="这是正文内容，完整展示不截断。#话题词 可以点击跳转。"
                    android:textSize="16sp"
                    android:textColor="#E6161823"
                    android:fontFamily="@font/pingfangregular"
                    android:lineSpacingMultiplier="1.5625" />

                <!-- 发布日期区域 -->
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="12-25"
                    android:textSize="12sp"
                    android:textColor="#57161823"
                    android:fontFamily="@font/pingfangregular" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 底部交互区（常驻） -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_interaction_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/et_comment"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/bg_comment_input"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/pingfangregular"
            android:gravity="center_vertical"
            android:hint="说点什么..."
            android:paddingStart="16dp"
            android:paddingEnd="36dp"
            android:textColorHint="#99161823"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/interaction_group"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/interaction_group"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- 点赞 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_like"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:paddingHorizontal="8dp">

                <ImageView
                    android:id="@+id/iv_like"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="点赞"
                    android:src="@drawable/ic_like_detail"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tv_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/pingfangmedium"
                    android:text="195"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/iv_like"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 评论 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_comment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:paddingHorizontal="8dp">

                <ImageView
                    android:id="@+id/iv_comment"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="评论"
                    android:src="@drawable/ic_comment_detail"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tv_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/pingfangmedium"
                    android:text="53"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/iv_comment"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 收藏 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_collect"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:paddingHorizontal="8dp">

                <ImageView
                    android:id="@+id/iv_collect"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="收藏"
                    android:src="@drawable/ic_collect_detail"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tv_collect_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/pingfangmedium"
                    android:text="41"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/iv_collect"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 分享 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:paddingHorizontal="8dp">

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="分享"
                    android:src="@drawable/ic_share_detail"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tv_share_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/pingfangmedium"
                    android:text="23"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/iv_share"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>